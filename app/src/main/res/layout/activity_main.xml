<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1ET"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorLink="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2ET"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textColorHighlight="@color/purple_500"
        android:textColorLink="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findSum"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="112dp"
        android:onClick="findSum"
        android:text="+"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="112dp"
        android:onClick="findDifference"
        android:text="-"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="260dp"
        android:onClick="findQuotient"
        android:text="รท"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="260dp"
        android:onClick="findProduct"
        android:text="x"
        android:textColor="@color/light_gray"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/squareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="4dp"
        android:onClick="findSquare"
        android:text="^2"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>