<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- gradient background source in gradient_background file -->

    <EditText
        android:id="@+id/num1ET"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2ET"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findSum"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="findSum"
        android:text="+"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="findDifference"
        android:text="-"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="findQuotient"
        android:text="รท"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="88dp"
        android:layout_height="119dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="findProduct"
        android:text="x"
        android:textColor="@color/light_gray"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/squareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:onClick="findSquare"
        android:text="^2"
        android:textColor="@color/light_gray"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>